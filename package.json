{
  "private": true,
  "name": "armchair-sleuths",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "postinstall": "npm run build",
    "prebuild:server": "node scripts/convert-yaml-to-json.cjs",
    "build:client": "cd src/client && vite build",
    "build:server": "npm run prebuild:server && cd src/server && vite build",
    "build:main": "vite build --config vite.main.config.ts",
    "build:skills-system": "tsc -b .kiro/skills-system",
    "build": "npm run build:client && npm run build:server && npm run build:main",
    "case:generate": "tsx scripts/generate-case.ts",
    "case:generate:images": "tsx scripts/generate-case.ts --with-images",
    "case:validate": "tsx scripts/validate-case.ts",
    "check": "npm run type-check && npm run lint:fix && npm run prettier",
    "suspect:add-archetype": "tsx skills/suspect-ai-prompter/scripts/generate-archetype.ts",
    "suspect:generate-examples": "tsx skills/suspect-ai-prompter/scripts/generate-examples.ts",
    "suspect:improve-prompt": "tsx skills/suspect-ai-prompter/scripts/improve-prompt.ts",
    "suspect:validate": "tsx skills/suspect-ai-prompter/scripts/validate-quality.ts",
    "suspect:validate-consistency": "node scripts/validate-archetype-consistency.cjs",
    "suspect:test": "cd src/server/services/prompts && npx vitest run __tests__/ArchetypePrompts.test.ts",
    "suspect:workflow:new-archetype": "tsx skills/suspect-ai-prompter/scripts/workflow-new-archetype.ts",
    "suspect:workflow:batch-validate": "tsx skills/suspect-ai-prompter/scripts/workflow-batch-validate.ts",
    "suspect:workflow:improve-prompt": "tsx skills/suspect-ai-prompter/scripts/workflow-improve-prompt.ts",
    "create-game-post": "npx tsx scripts/create-game-post.ts",
    "deploy": "npm run build && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit:delayed\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:devvit": "devvit playtest",
    "dev:devvit:delayed": "node -e \"setTimeout(() => {}, 5000)\" && devvit playtest",
    "dev:server": "cd src/server && vite build --watch",
    "dev:vite": "cd src/client && vite --port 7474",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "login": "devvit login",
    "launch": "npm run build && npm run deploy && devvit publish",
    "prettier": "prettier-package-json --write ./package.json && prettier --write .",
    "type-check": "tsc --build",
    "validate:config": "node scripts/validate-devvit-config.cjs",
    "validate:build": "node scripts/verify-build-outputs.cjs",
    "validate:all": "node scripts/validate-all.cjs"
  },
  "dependencies": {
    "@devvit/web": "0.12.1",
    "chokidar": "^4.0.3",
    "clsx": "2.1.1",
    "devvit": "0.12.1",
    "dotenv": "^17.2.3",
    "express": "5.1.0",
    "framer-motion": "^12.23.24",
    "js-yaml": "^4.1.0",
    "lru-cache": "^11.2.2",
    "marked": "^16.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-type-animation": "^3.2.0",
    "tailwind-merge": "3.3.0",
    "tiktoken": "^1.0.22",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@tailwindcss/vite": "4.1.6",
    "@types/express": "5.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "@vitejs/plugin-react": "4.4.1",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "eslint": "9.23.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "globals": "15.15.0",
    "prettier": "3.5.3",
    "prettier-package-json": "2.8.0",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "4.1.6",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vite": "6.2.4",
    "vitest": "3.1.1"
  }
}
